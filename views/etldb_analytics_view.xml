<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_etldb_analytics_tree" model="ir.ui.view">
        <field name="name">view.etldb.analytics.tree</field>
        <field name="model">etldb.analytics</field>
        <field name="type">tree</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <tree string="InformatioAnalyticsTree" create="1" delete="1" edit="1">
                <field name="date_begin"/>
                <field name="date_end"/>
                <field name="users_by_days" widget="bokeh_chart"/>
            </tree>
        </field>
    </record>

    <record id="view_etldb_analytics_form" model="ir.ui.view">
        <field name="name">view.etldb.analytics.form</field>
        <field name="model">etldb.analytics</field>
        <field name="type">form</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16"/>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <form string="InformatioAnalyticsForm">
                <sheet>
                    <field name="date_begin"/>
                    <field name="date_end"/>
                </sheet>
                <field name="users_by_days" widget="bokeh_chart"/>
            </form>
        </field>
    </record>

    <record id="view_etldb_analytics_search" model="ir.ui.view">
        <field name="name">view.etldb.analytics.search</field>
        <field name="model">etldb.analytics</field>
        <field name="type">search</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16"/>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <search string="InformatioAnalyticsSearch">
            </search>
        </field>
    </record>

    <record id="action_window_etldb_analytics" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Аналитика</field>
        <field name="res_model">etldb.analytics</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="view_etldb_analytics_search"/>
    </record>

    <record id="etldb.menu_analytics" model="ir.ui.menu">
        <field name="name">Аналитика</field>
        <field name="sequence" eval="20"/>
        <field name="action" ref="action_window_etldb_analytics"/>
        <field name="parent_id" ref="etldb.menu_analytics_catalog"/>
        <field name="groups_id" eval="[(4, ref('etldb_base.group_moderator'))]"/>
    </record>
</odoo>